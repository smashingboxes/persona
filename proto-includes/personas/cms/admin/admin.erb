<div id="admin-toggle">
  
  <a id="icon" href="/admin">i</a>
  
  <nav>
      <a class="create" href="/new" title="Create a new page" draggable="true">+</a>
      
  <% if params[:id] %>
      <a class="edit" href="/edit/<%= params[:id] %>" title="Edit current page">&#9998;</a>
      <a class="delete" href="/destroy/<%= params[:id] %>" title="Delete current page">&#10006;</a>
  <% elsif @content %>
      <a class="edit" href="/edit/<%= @content.id %>" title="Edit current page">&#9998;</a>
      <a class="delete" href="/destroy/<%= @content.id %>" title="Delete current page">&#10006;</a>
  <% else %>
      <a class="disabled">&#9997;</a>
      <a class="disabled">&#10006;</a>
  <% end %>
      <hr/>
      <a href="/tools/type" title="View Typography">t</a>
      <a href="/tools/sitemap" title="View Sitemap">s</a>
  </nav>
  
</div>

<style>
    /* Prototypical Admin
    ------------------------------------------ */
    #admin-toggle                               { position: fixed; top: 0; left: -1px; width: 41px; background: #222; height: 40px; overflow: hidden; font-size: 14px; text-align: center; -moz-transition-property: all 0.1s linear; -webkit-transition-property: all 0.1s linear; -o-transition-property: all 0.1s linear; transition-property: all 0.1s linear; -moz-transition-duration: 1s; -webkit-transition-duration: 1s; -o-transition-duration: 1s; transition-duration: 1s; -moz-border-radius-bottomright: 4px; -webkit-border-bottom-right-radius: 4px; -o-border-bottom-right-radius: 4px; -ms-border-bottom-right-radius: 4px; -khtml-border-bottom-right-radius: 4px; border-bottom-right-radius: 4px; -moz-box-shadow: inset 0 0 10px #111111; -webkit-box-shadow: inset 0 0 10px #111111; -o-box-shadow: inset 0 0 10px #111111; box-shadow: inset 0 0 10px #111111; z-index: 9999; }
    #admin-toggle:hover                         { height: 292px; }
    #admin-toggle nav                           { width: 26px; margin-left: 3px; }
    #admin-toggle a                             { background: #222; border: 1px solid #444; color: #fff; display: block; font: bold 20px/30px Frutiger, "Frutiger Linotype", Univers, Calibri, "Myriad Pro", Myriad, "DejaVu Sans Condensed", "Liberation Sans", "Nimbus Sans L", Tahoma, Geneva, "Helvetica Neue", Helvetica, Arial, sans-serif; margin: 0 0 7px 0; width: 32px; height: 32px; text-shadow: 0 1px 0 #AAA; text-align: center; -moz-border-radius: 3px; -webkit-border-radius: 3px; -o-border-radius: 3px; -ms-border-radius: 3px; -khtml-border-radius: 3px; border-radius: 3px; -moz-box-shadow: 0 1px 0px rgba(0, 0, 0, 0.35); -webkit-box-shadow: 0 1px 0px rgba(0, 0, 0, 0.35); -o-box-shadow: 0 1px 0px rgba(0, 0, 0, 0.35); box-shadow: 0 1px 0px rgba(0, 0, 0, 0.35); -moz-transition-property: all 0.1s easeOut; -webkit-transition-property: all 0.1s easeOut; -o-transition-property: all 0.1s easeOut; transition-property: all 0.1s easeOut; -moz-transition-duration: 1s; -webkit-transition-duration: 1s; -o-transition-duration: 1s; transition-duration: 1s; }
    #admin-toggle a:hover                       { -moz-box-shadow: 0 0 8px #999999; -webkit-box-shadow: 0 0 8px #999999; -o-box-shadow: 0 0 8px #999999; box-shadow: 0 0 8px #999999; border-color: #777; }
