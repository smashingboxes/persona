    #admin-toggle a.create:hover                { -moz-box-shadow: 0 0 8px #99ff99; -webkit-box-shadow: 0 0 8px #99ff99; -o-box-shadow: 0 0 8px #99ff99; box-shadow: 0 0 8px #99ff99; border-color: #9f9; }
    #admin-toggle a.edit                        { color: #99f; border-color: #66a; }
    #admin-toggle a.edit:hover                  { -moz-box-shadow: 0 0 8px #5555ff; -webkit-box-shadow: 0 0 8px #5555ff; -o-box-shadow: 0 0 8px #5555ff; box-shadow: 0 0 8px #5555ff; border-color: #99f; }
