    .flash.success a                            { color: #264409; }
    .flash.error, .flash.alert                  { background-color: #FBE3E4; color: #8A1F11; border-color: #FBC2C4; -moz-box-shadow: inset 0 1px 0 white, #ffcccc 0 1px 3px; -webkit-box-shadow: inset 0 1px 0 white, #ffcccc 0 1px 3px; -o-box-shadow: inset 0 1px 0 white, #ffcccc 0 1px 3px; box-shadow: inset 0 1px 0 white, #ffcccc 0 1px 3px; }
    .flash.error a, .flash.alert a              { color: #8a1f11; }
