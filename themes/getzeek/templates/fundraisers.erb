<section id="fundraisers">
        
    <article class="text-block">
        <%= the_content %>
    </article>

    <section class="deals">    
    <nav>
        <header>Fundraisers</header>
    </nav>
    
    <ul class="feed">
    <% proto_loop "post", 5 do %>
        <li class="post">
            <h3 class="deal_type">CFCC Alumni</h3>
            <ul class="actions">
                <li><a href="#">Support this fundraiser +</a></li>
            </ul>
            <div class="content">
                <img class="thumb" src="http://www.lorempixum.com/65/65" />
                <h4><a href="<%= the_link %>"><%= the_title %></a></h4>
                <p class="meta"><time datetime="<%= the_datetime %>"><%= the_datetime.strftime("%l:%M%P on %A, %B %e %Y") %></time></p>
                <p class="description"><%= the_excerpt %></p>
            </div>                  
        </li>
    <% end %>
    
        <li class="view_all"><a class="button">View all deals</a></li>
    </ul>

</section>