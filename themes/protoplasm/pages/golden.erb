<style>
    
    
    .golden {
        float: left;
    }    
    
    .mothership {
        border: 1px solid #777;
        background: #999;
        height: 700px;
        overflow: hidden;
        width: 100%;
        margin-bottom: 200px;
    }
    
</style>



<script>

    (function() {
        
        var ColorPicker = {
            
            colors : [ "#F7E4A2", "#A7BD5B", "#DC574E", "#8DC7B8", "#ED9355", "#FFF", "#111" ],
            slot   : -1,
            
            next : function() {
                
                ColorPicker.slot += 1            
                
                
                if ( ColorPicker.slot > ColorPicker.colors.length ) {
                    ColorPicker.slot = 0;
                }
                
                return ColorPicker.colors[ColorPicker.slot];
            }
        }
        
        $("#wrapper").prepend("<div class='mothership golden'></div>");
                
        $(".golden").live("click", function(e) {
                  
            $(e.target).html("<div class='golden'></div><div class='golden'></div>");
            
            var target = $(e.target);
            
            if (target.height() > target.width()) {
                target.children(".golden:first").animate({"width": "100%", "height" : "38%", "opacity" : 0.9 }, 400).css( "background", ColorPicker.next() );
                target.children(".golden:last").animate({"width": "100%", "height" : "62%", "opacity" : 0.9 }, 400).css( "background", ColorPicker.next() );
            }
            else {
                target.children(".golden:first").animate({"height": "100%", "width" : "38%" }, 400).css( "background", ColorPicker.next() );
                target.children(".golden:last").animate({"height": "100%", "width" : "62%" }, 400).css( "background", ColorPicker.next() );
            }
            
            
            
        });
    
    
    })();

</script>
