<%= get_header() %>
<div id="content">
	<div class="post">
		<h2 class="title title_page"><%= _e('Error 404 - Not Found', 'zbench') %></h2>
		<div class="entry">
			<p><%= _e('Sorry, but you are looking for something that isn&#8217t here.', 'zbench') %></p>
			<h3><%= _e('Random Posts', 'zbench') %></h3>
			<ul>
				<%=
					$rand_posts = get_posts('numberposts=5&orderby=rand')
					foreach( $rand_posts as $post ) :
				%>
				<li><a href="<%= the_permalink() %>"><%= the_title() %></a></li>
				<%= endforeach %>
			</ul>
			<h3><%= _e('Tag Cloud', 'zbench') %></h3>
			<%= wp_tag_cloud('smallest=9&largest=22&unit=pt&number=200&format=flat&orderby=name&order=ASC')%>
		</div><!--entry-->
	</div><!--post-->
</div><!--content-->
<%= get_sidebar() %>
<%= get_footer() %>
