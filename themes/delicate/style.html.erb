<style type="text/css">
<%=
	require (TEMPLATEPATH . '/include/settings-color.php')
	for ($i = 0 $i < count($controls) $i++) {
		switch ($controls[$i]['type']) {
			case 'background-color':
%>
	<%= echo $controls[$i]['selector'] %> {
		background-color: #<%= echo t_get_coption($controls[$i]['name']) %><%= if (isset($controls[$i]['important']) && $controls[$i]['important']) { echo '!important' } %>
	}
<%=
				break
			case 'background-image':
%>
	<%= echo $controls[$i]['selector'] %> {
		background-image: url('<%= echo $controls[$i]['path'].t_get_coption($controls[$i]['name']) %>')<%= if (isset($controls[$i]['important']) && $controls[$i]['important']) { echo '!important' } %>
	}
<%=
				break
			case 'color':
%>
	<%= echo $controls[$i]['selector'] %> {
		color: #<%= echo t_get_coption($controls[$i]['name']) %><%= if (isset($controls[$i]['important']) && $controls[$i]['important']) { echo '!important' } %>
	}
<%=
				break
			case 'color:hover':
%>
	<%= echo $controls[$i]['selector'] %> {
		color: #<%= echo t_get_coption($controls[$i]['name']) %><%= if (isset($controls[$i]['important']) && $controls[$i]['important']) { echo '!important' } %>
	}
<%=
				break
			case 'font-size':
%>
	<%= echo $controls[$i]['selector'] %> {
		font-size: <%= echo t_get_coption($controls[$i]['name']) %>px<%= if (isset($controls[$i]['important']) && $controls[$i]['important']) { echo '!important' } %>
	}
<%=
				break
		}
	}
%>
</style>

