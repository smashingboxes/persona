<%= get_header()%>      

<%= 
$t_show_post = t_get_option( "t_show_post" )		
%>    
<div id="main">		
	<div class="columns">
     <div class="narrowcolumn">
     
    <%= 	if ( have_posts() )
		the_post() %>
     			
     <h2 class="page-title author"><%= printf( __( '
Author Archives: %s', 'nattywp' ), "<span class='vcard'><a class='url fn n' href='" . get_author_posts_url( get_the_author_meta( 'ID' ) ) . "' title='" . esc_attr( get_the_author() ) . "' rel='me'>" . get_the_author() . "</a></span>" ) %></h2>

<%=
// If a user has filled out their description, show a bio on their entries.
if ( get_the_author_meta( 'description' ) ) : %>
					<div id="entry-author-info">
						<div id="author-avatar">
							<%= echo get_avatar( get_the_author_meta( 'user_email' ), apply_filters( 'nattywp_author_bio_avatar_size', 60 ) ) %>
						</div><!-- #author-avatar -->
						<div id="author-description">
							<h2><%= printf( __( 'About %s', 'nattywp' ), get_the_author() ) %></h2>
							<div class="user-link"><%= the_author_meta( 'user_url' ) %></div>							 
							<%= the_author_meta( 'description' ) %>
						</div><!-- #author-description	-->
					</div><!-- #entry-author-info -->
<%= endif %>


<%= rewind_posts() %>

     	  <%= if (have_posts()) : %>
     <%= while (have_posts()) : the_post() %>										
			<div class="post">            	
                <div class="title">
				<h2><a href="<%= the_permalink() %>" rel="bookmark" title="<%= the_title() %>"><%= the_title() %></a></h2>
                <small><%= _e('Posted by','nattywp') %> <span class="author"><%= the_author() %></span> <%= _e('in','nattywp') %> <%= the_category(' | ')%> - (<%= comments_popup_link(__('0 Comments', 'nattywp'), __('1 Comments', 'nattywp'), __('% Comments', 'nattywp')) %>)</small> <%= edit_post_link(__('Edit','nattywp'), ' | ', '') %>
                </div>              
				<div class="entry">
          <%=
              if ( has_post_thumbnail() ) { // check if the post has a Post Thumbnail assigned to it.
                      the_post_thumbnail()} 
              if ($t_show_post == 'no') {//excerpt  
                      get_thumb('Image','130','85','small-image', '<div class="thumb">', '</div>' )                   
                      the_excerpt()  
              } else { //fullpost 
                      t_show_video($post->ID)
                      the_content()                    
              } %>
                    <div class="clear"></div>
                </div>              
                
				<p class="postmetadata">
           <span class="category"><%= the_tags('', ', ', '') %></span>   
				</p>
			</div>			
	<%= endwhile %>	
    		
		<div id="navigation">
		<%= natty_pagenavi() %>
		</div>    
        
    <%= else : 
		echo '<div class="post">'
		if ( is_category() ) { // If this is a category archive
			printf(__('<h2 class=\'center\'>Sorry, but there aren\'t any posts in the %s category yet.</h2>','nattywp'), single_cat_title('',false))
		} else if ( is_date() ) { // If this is a date archive
			_e('<h2>Sorry, but there aren\'t any posts with this date.</h2>','nattywp')
		} else if ( is_author() ) { // If this is a category archive
			$userdata = get_userdatabylogin(get_query_var('author_name'))
			printf(__('<h2 class=\'center\'>Sorry, but there aren\'t any posts by %s yet.</h2>','nattywp'), $userdata->display_name)
		} else {
      _e('<h2 class=\'center\'>No posts found.</h2>','nattywp')
		}
		get_search_form()	
		echo '</div>'		
	endif %>
	
 </div> <!-- END Narrowcolumn -->
   <div id="sidebar" class="profile">
     <%= get_sidebar()%>
   </div>    
<div class="clear"></div>    
<%= get_footer() %> 
