<%= // Do not delete these lines
	if ('comments.php' == basename($_SERVER['SCRIPT_FILENAME']))
		die ('Please do not load this page directly. Thanks!')

	if (!empty($post->post_password)) { // if there's a password
		if ($_COOKIE['wp-postpass_' . COOKIEHASH] != $post->post_password) {  // and it doesn't match the cookie
			%>

			<p class="nocomments">This post is password protected. Enter the password to view comments.</p>

			<%=
			return
		}
	}

	/* This variable is for alternating comment background */
	$oddcomment = 'alt'
%>

<!-- You can start editing here. -->

<%= if ($comments) : %>
	<h2><%= comments_number('No Responses', '1 Response', '% Responses' )%></h2>
	<div class="inner-text">
	<ul class="commentlist">	
	<%= foreach ($comments as $comment) : %>
		<!-- comment -->
		
		
	<li class="comment even thread-even depth-1">
				<div>
					<div class="comment-author vcard">
								<%= echo get_avatar( $comment, $size = '32' ) %>	
								<cite class="fn"><%= comment_author_link() %></cite> <span class="says">says:</span>		
					</div>
			
					<div class="comment-meta commentmetadata"><a href="<%= the_permalink() %>#comment-<%= comment_ID() %>"><%= comment_date('l, jS F Y') %> at <%= comment_time() %></a>&nbsp&nbsp</div>
			
					<%= comment_text() %>
			
			<div class="reply">
         <%= edit_comment_link('(Edit)','&nbsp&nbsp','') %>
      </div>
					
							</div>
	</li>

					
				<!-- /comment -->	

	<%= /* Changes every other comment to a different class */
		if ('alt' == $oddcomment) $oddcomment = ''
		else $oddcomment = 'alt'
	%>

	<%= endforeach /* end for each comment */ %>
	</ul></div>

 <%= else : // this is displayed if there are no comments so far %>

	<%= if ('open' == $post->comment_status) : %>
		<!-- If comments are open, but there are no comments. -->

	 <%= else : // comments are closed %>
		<!-- If comments are closed. -->
		<p class="nocomments">Comments are closed.</p>

	<%= endif %>
<%= endif %>


<%= if ('open' == $post->comment_status) : %>

<!-- comment-form -->
<div id="comment-form">
				
	<h1 class="heading">Leave a Comment</h1>

		<%= if ( get_option('comment_registration') && !$user_ID ) : %>
		<p>You must be <a href="<%= echo get_option('siteurl') %>/wp-login.php?redirect_to=<%= the_permalink() %>">logged in</a> to post a comment.</p>

</div><!-- #commentform-->

<%= else : %>

		<form action="<%= echo get_option('siteurl') %>/wp-comments-post.php" method="post" id="commentform">
		
			<div>

			<%= if ( $user_ID ) : %>

				<p><%= _e('Logged in as', 'nattywp') %> <a href="<%= echo get_option('siteurl') %>/wp-admin/profile.php"><%= echo $user_identity %></a>. <a href="<%= echo get_option('siteurl') %>/wp-login.php?action=logout" title="<%= _e('Log out of this account', 'nattywp') %>"><%= _e('Logout', 'nattywp') %> &raquo</a></p>

			<%= else : %>

				<p>
					<label for="author">Your Name: <span class="required">Required</span></label>
				<input type="text" name="author" id="author" value="<%= echo $comment_author %>" size="22" tabindex="1" />
				</p>
				<p>
					<label for="email">Email: <span class="required">Required, Hidden</span></label>
					<input type="text" name="email" id="email" value="<%= echo $comment_author_email %>" size="22" tabindex="2" />
				</p>
				<p>
					<label for="url">Website:</label>
					<input type="text" name="url" id="url" value="<%= echo $comment_author_url %>" size="22" tabindex="3" />
				</p>
		
<%= endif %>

				<p>
					<label for="message">Message:</label>
					<textarea name="comment" id="comment" cols="40" rows="10" tabindex="4"></textarea>
				</p>

				<p style="background:transparent">
					<input name="submit" type="submit" id="submit" tabindex="5" value="Publish My Comment" />
					<input type="hidden" name="comment_post_ID" value="<%= echo $id %>" />
				</p>

				<%= do_action('comment_form', $post->ID) %>

			</div>
		
		</form>

</div><!-- #commentform -->

<%= endif // If registration required and not logged in %>

<%= endif // if you delete this the sky will fall on your head %>
