<%= get_header() %>
<div id="main">		
	<div class="columns">
    <div class="narrowcolumn singlepage">
     <%= if (have_posts()) : %>
     <%= while (have_posts()) : the_post() %>							
			<div class="post">
            	
                <div class="title">
				<h2><%= the_title() %></h2>
                <small><%= _e('Posted by','nattywp') %> <span class="author"><%= theme_get_profile() %></span> <%= _e('in','nattywp') %> <%= the_category(' | ')%> <%= edit_post_link(__('Edit','nattywp'), ' | ', '') %></small> 
                </div>                
				<div class="entry">
                     <%= t_show_video($post->ID) %>
                     <%= the_content() %>    
                    <div class="clear"></div>
                </div>              
                
				<p class="postmetadata">	               
                <%= wp_link_pages(array('before' => '<p><strong>Pages:</strong> ', 'after' => '</p>', 'next_or_number' => 'number')) %>        			
                <span class="category"><%= the_tags('', ', ', '') %></span>	
				</p>
        
        <p><small><%= _e('You can follow any responses to this entry through the','nattywp') %> <%= post_comments_feed_link('RSS 2.0') %>
						<%= if ( comments_open() && pings_open() ) {
							// Both Comments and Pings are open %>
							<%= _e('You can <a href="#respond">leave a response</a>, or','nattywp') %> <a href="<%= trackback_url() %>" rel="trackback"><%= _e('trackback','nattywp') %></a>.
						<%= } elseif ( !comments_open() && pings_open() ) {
							// Only Pings are Open %>
							<%= _e('Responses are currently closed, but you can','nattywp') %> <a href="<%= trackback_url() %> " rel="trackback"><%= _e('trackback','nattywp') %></a>.
						<%= } elseif ( comments_open() && !pings_open() ) {
							// Comments are open, Pings are not %>							
							<%= _e('You can skip to the end and leave a response. Pinging is currently not allowed.','nattywp') %>
						<%= } elseif ( !comments_open() && !pings_open() ) {
							// Neither Comments, nor Pings are open %>
							<%= _e('Both comments and pings are currently closed.','nattywp') %>							
						<%= }  %>
					</small>
         </p>	
                
			</div>	
            <div class="post">
        		<%= comments_template() %>      	
       		</div>				
	<%= endwhile %>	
	<%= else : %>
		<div class="post">
		<h2><%= _e('Not Found','nattywp') %></h2>
            <div class="entry"><p><%= _e('Sorry, but you are looking for something that isn\'t here.','nattywp') %></p>
            <%= get_search_form() %>
            </div>
        </div>
    <%= endif %>				
	
        </div> <!-- END Narrowcolumn -->
        <div id="sidebar" class="profile">
           <%= if (!function_exists('dynamic_sidebar') || (!is_active_sidebar(2))) {
                get_sidebar() 
              } else {
                echo '<ul>'
                dynamic_sidebar('sidebar-2')
                echo '</ul>'
              } %>
        </div>    
        <div class="clear"></div>

    
    <%= get_footer() %> 
